{
  "name": "@logux/client",
  "version": "0.9.3",
  "description": "Logux base components to build web client",
  "keywords": [
    "logux",
    "client",
    "websocket",
    "cross-tab",
    "indexeddb"
  ],
  "scripts": {
    "clean": "rimraf coverage/ test/demo/build/ test/demo/.cache",
    "test": "jest --coverage && eslint . && check-dts && size-limit && yaspeller *.md && yarn build",
    "build": "cd test/demo && yarn build",
    "start": "cd test/demo && yarn start"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/client",
  "type": "module",
  "sideEffects": false,
  "types": "./index.d.ts",
  "engines": {
    "node": "^12.0.0 || >=14.0.0"
  },
  "peerDependencies": {
    "@logux/core": "^0.6.2"
  },
  "dependencies": {
    "fast-json-stable-stringify": "^2.1.0",
    "nanodelay": "^1.0.6",
    "nanoevents": "^5.1.10",
    "nanoid": "^3.1.20"
  },
  "devDependencies": {
    "@logux/core": "logux/core#next",
    "@logux/eslint-config": "^44.1.0",
    "@logux/sharec-config": "^0.8.5",
    "@peculiar/webcrypto": "^1.1.4",
    "@size-limit/preset-small-lib": "^4.9.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "check-dts": "^0.4.1",
    "colorette": "^1.2.1",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.16.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^27.0.0",
    "fake-indexeddb": "^3.1.2",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-esm-transformer": "^1.0.0",
    "lint-staged": "^10.5.3",
    "parcel": "^2.0.0-nightly.463",
    "print-snapshots": "^0.3.2",
    "rimraf": "^3.0.2",
    "size-limit": "^4.9.2",
    "svgo": "^1.3.2",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": "svgo",
    "*.md": "yaspeller",
    "*.js": "eslint --fix",
    "*.ts": "eslint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      ".js": "jest-esm-transformer"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@logux)"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/indexed-store/index.js",
      "<rootDir>/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "moduleNameMapper": {
      ".*\\.svg$": "<rootDir>/test/image.js"
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/ts",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": "indexed-store/index.test.ts",
        "rules": {
          "import/order": "off"
        }
      },
      {
        "files": "encrypt-actions/*",
        "rules": {
          "node/no-unsupported-features/node-builtins": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "test/demo/build",
    "**/errors.ts"
  ],
  "size-limit": [
    {
      "name": "CrossTabClient",
      "path": "./cross-tab-client/index.js",
      "import": "{ CrossTabClient }",
      "limit": "4 KB"
    },
    {
      "name": "Helpers",
      "import": {
        "./index.js": "{ attention, confirm, favicon, status, log, badge, badgeEn }",
        "./badge/styles/index.js": "{ badgeStyles }"
      },
      "limit": "3 KB"
    }
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "logux",
      "resubscriptions",
      "resubscribe",
      "GraphQL",
      "UI",
      "UX",
      "DevTools",
      "io",
      "ES",
      "JSDoc",
      "TypeDoc",
      "WebSocket",
      "roadmap"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.8.5"
  }
}
